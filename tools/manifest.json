{
  "manifest_version": 3,
  "name": "Accessibility Toolbox",
  "version": "1.0",
  "description": "A toolbox to enhance web accessibility",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["brightness.html", "audio.html", "zoom.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
